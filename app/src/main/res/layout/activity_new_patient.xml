<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="edu.smu.cervicalcancerapp.NewPatient"
    android:id="@+id/layout"
    android:orientation="vertical">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/enter_first_name"
        android:hint="First Name"
        android:editable="true"
        android:textSize="25dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/enter_family_name"
        android:editable="true"
        android:hint="Family Name"
        android:textSize="25dp"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Patient Date of Birth"
        android:id="@+id/textView3"
        android:layout_gravity="center_horizontal"
        android:gravity="bottom|center_horizontal"
        android:textSize="25dp"
        android:textIsSelectable="false"
        android:layout_weight="1"/>

    <DatePicker
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/enter_dob"
        android:calendarViewShown="false"
        android:spinnersShown="true"
        android:startYear="1914"
        android:layout_weight="1"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Create New Patient"
        android:id="@+id/create_new_patient"
        android:textSize="25dp"
        android:layout_weight="1"/>
</LinearLayout>
